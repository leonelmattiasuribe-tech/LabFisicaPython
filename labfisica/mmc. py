import numpy as np

def coeficiente_A(x, y):
    N = len(x)
    return (np.sum(y)*np.sum(x**2) - np.sum(x)*np.sum(x*y)) / (N*np.sum(x**2) - np.sum(x)**2)

def coeficiente_B(x, y):
    N = len(x)
    return (N*np.sum(x*y) - np.sum(x)*np.sum(y)) / (N*np.sum(x**2) - np.sum(x)**2)

def errores(x, y, A, B):
    N = len(x)
    y_pred = A + B*x
    sigma2 = np.sum((y - y_pred)**2) / (N-2)
    delta = N*np.sum(x**2) - np.sum(x)**2
    return np.sqrt(sigma2 * np.sum(x**2) / delta), np.sqrt(sigma2 * N / delta)
    
